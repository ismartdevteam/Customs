<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mn.custom.mongoliancustoms"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="mn.custom.splash.SplashAc"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mn.custom.login.LoginAc"
            android:configChanges="keyboard|keyboardHidden"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="mn.custom.mongoliancustoms.MainActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="mn.custom.mongoliancustoms.RegisterAc"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>